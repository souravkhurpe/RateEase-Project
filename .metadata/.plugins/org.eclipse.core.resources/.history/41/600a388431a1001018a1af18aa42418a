package com.hrs.ratingService.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.hrs.ratingService.dto.RatingRequestDTO;
import com.hrs.ratingService.dto.RatingResponseDTO;
import com.hrs.ratingService.service.RatingService;

@RestController
@RequestMapping("/rating")
public class RatingController {

	@Autowired
	private RatingService service;

	@PostMapping
	public ResponseEntity<?> saveRating(@RequestBody RatingRequestDTO requestDTO) {

		RatingResponseDTO responseDTO = service.saveRating(requestDTO);

		return new ResponseEntity(responseDTO, HttpStatus.OK);
	}

	@GetMapping
	public ResponseEntity<?> getAllRating() {

		List<RatingResponseDTO> responseDTO = service.getAllRating();

		return new ResponseEntity(responseDTO, HttpStatus.OK);
	}

	@GetMapping("/user/{userId}")
	public ResponseEntity<?> getRatingByUserId(@PathVariable("userId") Integer userId) {

		RatingResponseDTO responseDTO = service.getRatingByUserId(userId);

		return new ResponseEntity(responseDTO, HttpStatus.OK);
	}

	@GetMapping("/hotel/{hotelId}")
	public ResponseEntity<?> getRatingByHotelId(@PathVariable("hotelId") Integer hotelId) {

		RatingResponseDTO responseDTO = service.getRatingByHotelId(hotelId);

		return new ResponseEntity(responseDTO, HttpStatus.OK);
	}

	@DeleteMapping("/{ratingId}")
	public ResponseEntity<?> deleteRatingByRatingId(@PathVariable("ratingId") Integer ratingId) {

		service.deleteRatingByRatingId(ratingId);

		return new ResponseEntity("Rating deleted successfully against rating ID: " + ratingId, HttpStatus.OK);

	}

}
